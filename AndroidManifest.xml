<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationNew"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsActivity"
            android:label="Settings"
            android:exported="false"/>

        <activity android:name=".ProfileActivity"
            android:label="Profile"
            android:exported="false"/>

        <activity android:name=".VoiceSettingsActivity" android:exported="false"/>
        <activity android:name=".CustomiseAlertsActivity" android:exported="false"/>
        <activity android:name=".NavigationHistoryActivity" android:exported="false"/>
        <activity android:name=".EmergencyContactsActivity" android:exported="false"/>
        <activity android:name=".UserInfoActivity" android:exported="false"/>
        <activity android:name=".NavigationActivity" android:exported="false"/>


    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>